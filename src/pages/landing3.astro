    <!-- Script para video en móviles -->
    <script>
        const mobileVideoUrl = 'https://vz-cddd003b-54d.b-cdn.net/d9b33ff9-2813-4bc1-8dd8-a9aeb3cd5e05/playlist.m3u8';
        const desktopVideoUrl = 'https://vz-cddd003b-54d.b-cdn.net/07cff805-1194-412c-87d0-dd024c07bd13/playlist.m3u8';

        // Detectar si es un dispositivo móvil
        function isMobileDevice() {
            return /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) 
                || (window.innerWidth <= 768);
        }

        // Inicializar video HLS
        function initHLS(videoElement, withSound = false, isMobile = false) {
            if (!videoElement) return;
            
            const videoUrl = isMobile ? mobileVideoUrl : desktopVideoUrl;

            if (Hls.isSupported()) {
                const hls = new Hls({
                    enableWorker: true,
                    lowLatencyMode: true,
                    backBufferLength: 90
                });
                hls.loadSource(videoUrl);
                hls.attachMedia(videoElement);
                hls.on(Hls.Events.MANIFEST_PARSED, function() {
                    // Intentar reproducir con sonido si es móvil
                    if (withSound) {
                        videoElement.muted = false;
                        videoElement.play().catch(e => {
                            console.log('Autoplay con sonido bloqueado, intentando sin sonido');
                            // Si falla, intentar sin sonido
                            videoElement.muted = true;
                            videoElement.play().catch(err => console.log('Autoplay prevented:', err));
                            // Actualizar el botón
                            const toggleBtn = document.getElementById('toggle-audio');
                            if (toggleBtn) toggleBtn.textContent = '🔇';
                        });
                    } else {
                        videoElement.play().catch(e => console.log('Autoplay prevented:', e));
                    }
                });
            } else if (videoElement.canPlayType('application/vnd.apple.mpegurl')) {
                // Para Safari en iOS - usar la URL correcta
                const videoUrl = isMobile ? mobileVideoUrl : desktopVideoUrl;
                videoElement.src = videoUrl;
                videoElement.addEventListener('loadedmetadata', function() {
                    if (withSound) {
                        videoElement.muted = false;
                        videoElement.play().catch(e => {
                            console.log('Autoplay con sonido bloqueado, intentando sin sonido');
                            videoElement.muted = true;
                            videoElement.play().catch(err => console.log('Autoplay prevented:', err));
                            const toggleBtn = document.getElementById('toggle-audio');
                            if (toggleBtn) toggleBtn.textContent = '🔇';
                        });
                    } else {
                        videoElement.play().catch(e => console.log('Autoplay prevented:', e));
                    }
                });
            }
        }

        // Función para mostrar el video en pantalla completa
        function showMobileVideo() {
            const overlay = document.getElementById('mobile-video-overlay');
            const mobileVideo = document.getElementById('mobile-video');
            
            if (overlay) {
                overlay.classList.add('active');
                document.body.classList.add('video-playing');
                
                // Inicializar HLS para el video móvil CON SONIDO
                if (mobileVideo && !mobileVideo.src) {
                    initHLS(mobileVideo, true, true); // true para sonido, true para móvil
                }
            }
        }

        // Función para cerrar el video
        function closeMobileVideo() {
            const overlay = document.getElementById('mobile-video-overlay');
            const mobileVideo = document.getElementById('mobile-video');
            
            if (overlay) {
                overlay.classList.remove('active');
                document.body.classList.remove('video-playing');
                
                // Pausar el video móvil
                if (mobileVideo) {
                    mobileVideo.pause();
                }
                
                // Inicializar el video de la página principal si no está inicializado
                const desktopVideo = document.getElementById('desktop-video');
                if (desktopVideo && !desktopVideo.src && !desktopVideo.dataset.initialized) {
                    desktopVideo.dataset.initialized = 'true';
                    // Usar el video móvil vertical para mantener consistencia
                    initHLS(desktopVideo, false, true);
                }
            }
        }

        // Ejecutar cuando el DOM esté listo
        document.addEventListener('DOMContentLoaded', function() {
            const soundActivationOverlay = document.getElementById('sound-activation-overlay');
            const activateSoundBtn = document.getElementById('activate-sound-btn');
            
            // Evento del botón de activación inicial
            if (activateSoundBtn) {
                activateSoundBtn.addEventListener('click', function() {
                    // Ocultar el overlay de activación
                    if (soundActivationOverlay) {
                        soundActivationOverlay.classList.add('hidden');
                    }
                    
                    // Si es móvil, mostrar el video con sonido
                    if (isMobileDevice()) {
                        setTimeout(showMobileVideo, 100);
                    } else {
                        // Si es escritorio, inicializar el video
                        const desktopVideo = document.getElementById('desktop-video');
                        if (desktopVideo) {
                            initHLS(desktopVideo, false, false); // sin sonido automático, desktop
                        }
                    }
                });
            }

            // Agregar evento al botón de cerrar
            const closeButton = document.getElementById('close-video');
            if (closeButton) {
                closeButton.addEventListener('click', closeMobileVideo);
            }

            // Agregar evento al botón de audio
            const toggleAudioButton = document.getElementById('toggle-audio');
            const mobileVideo = document.getElementById('mobile-video');
            
            if (toggleAudioButton && mobileVideo) {
                toggleAudioButton.addEventListener('click', function(e) {
                    e.stopPropagation(); // Evitar que se cierre el overlay
                    if (mobileVideo.muted) {
                        mobileVideo.muted = false;
                        toggleAudioButton.textContent = '🔊';
                    } else {
                        mobileVideo.muted = true;
                        toggleAudioButton.textContent = '🔇';
                    }
                });

                // Permitir activar sonido tocando el video (si está silenciado)
                mobileVideo.addEventListener('click', function() {
                    if (mobileVideo.muted) {
                        mobileVideo.muted = false;
                        toggleAudioButton.textContent = '🔊';
                    }
                });
            }

            // También permitir cerrar tocando fuera del video (opcional)
            const overlay = document.getElementById('mobile-video-overlay');
            if (overlay) {
                overlay.addEventListener('click', function(e) {
                    if (e.target === overlay) {
                        closeMobileVideo();
                    }
                });
            }
        });
    </script>
    
